    function Txt() {
        if ($("#Text1").val() != $("#Userpwd").val()) {
            $("#lab1").text("输入的密码错误");
            return;
        }
        else {
            $("#lab1").hide();
        }
    }

    function que() {
        if ($("#Gaipwd").val() != $("#Quepwd").val()) {
            $("#lab").text("两次密码不一样");
            return;
        }
        else {
            $("#lab").hide();
        }
    }



    function Iphone() {
