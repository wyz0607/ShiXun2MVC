        //$("#Quepwd").val().empty();
        //$("#Phone").val().empty();
        //$("#Yan").val().empty();
        location.reload();
    }
    var ordertime = 60   //设置再次发送验证码等待时间
    var timeleft = ordertime
    var btn = $(".yzm")
    var phone = $(".phone")
