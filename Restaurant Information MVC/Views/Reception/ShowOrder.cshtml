@model IEnumerable<Restaurant_Information_MVC.Models.OrderViewModel>
@{
    ViewBag.Title = "ShowOrder";
}

<link href="~/layui/css/layui.css" rel="stylesheet" />
<script src="~/layui/layui.js"></script>
<h2>ShowOrder</h2>
<input type="hidden" id="pCount" value="@ViewBag.pCount" />
<input type="hidden" id="pageSize" value="@ViewBag.pSize" />
<form action="/Reception/ShowOrder" method="get">
    <input type="hidden" id="pIndex" value="@ViewBag.pIndex" />
    <input type="text" placeholder="请输入您要查询的订单号" name="OrderId" style="width:240px;height:37px;float:left;margin-left:500px" value="" />
    <input type="submit" class="layui-btn" style="float:left" value="查询" />
</form>

<table id="tb" style="margin-top:60px" class="layui-table">
    <colgroup>
        <col width="150">
        <col width="200">
        <col>
    </colgroup>
    <thead>
        <tr>
            <th>订单号</th>
            <th>用户号</th>
            <th>用户名</th>
            <th>手机号</th>
            <th>预定时间</th>
            <th>就餐时间</th>
            <th>餐桌号</th>
            <th>总额</th>
            <th>订单状态</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody Name="tr1">
            <tr>
                <td>@item.OrderID</td>
                <td>@item.UserID</td>
                <td>@item.UserName</td>
                <td>@item.UserPhone</td>
                <td>@item.ScheduledTime</td>
                <td>@item.RepastTime</td>
                <td>@item.TableID</td>
                <td>@item.TotalPrice</td>
                <td>@item.OrderState</td>
            </tr>
        </tbody>
    }
</table>
<div id="test1" style="margin-left:500px"></div>
<script>
    layui.use('laypage', function () {
        var laypage = layui.laypage;

        //执行一个laypage实例
        laypage.render({
            elem: 'test1' //注意，这里的 test1 是 ID，不用加 # 号
            , count: $("#pCount").val() //数据总数，从服务端得到
            , limit: $("#pageSize").val() //每页显示条数
            , prev: "上一页"
            , next: "下一页"
            , hash: "?pageIndex"
            , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
            , jump: function (obj, first) {
                if (!first) {
                    //alert('第 ' + obj.curr + ' 页');
                    //location.href = "/Reception/ShowOrder?pageIndex=" + obj.curr

                    $.ajax({
                        url: "/Reception/Order?pageIndex=" + obj.curr,
                        dataType: "json",
                        success: function (data) {
                            var tbody = '';
                            for (var i in data) {
                                tbody += ' <tbody Name="tr1">'
                                    + ' <tr>'
                                    + '<td>' + data[i].OrderID + '</td> '
                                    + '<td>' + data[i].UserID + '</td>'
                                    + '<td>' + data[i].UserName + '</td>'
                                    + '<td>' + data[i].UserPhone + '</td>'
                                    + '<td>' + data[i].ScheduledTime + '</td>'
                                    + '<td>' + data[i].RepastTime + '</td>'
                                    + '<td>' + data[i].TableID + '</td>'
                                    + '<td>' + data[i].TotalPrice + '</td>'
                                    + '<td>' + data[i].OrderState + '</td>'
                                    + '</tr>'
                                    + '</tbody>';
                            }
                            $("[name=tr1]").remove();
                            $("#tb").append(tbody);
                        }
                    })
                }

            }
        });
    });


</script>
